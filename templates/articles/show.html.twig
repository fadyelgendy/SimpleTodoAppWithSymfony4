{% extends 'base.html.twig' %}

{% block title %} {{todo.title}} {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="display-3">{{ todo.title }}</h1>
        <p class="lead">{{ todo.body }}</p>

        <a href="{{ path('update_todo', {'id' : todo.id}) }}"
           class="btn btn-light rounded delete-todo">Edit</a>

        <a href="../" class="btn btn-primary rounded">Back</a>
    </div>
{% endblock %}